.widget-select:hover
  background-color #8b8b8b
  color #ffffff


.widget-select-active
  border-color active-color
  color active-color

.widget-select-active select
  color #FFFFFF
  background-color transparent
  border-style none
  border-width 0
  text-align center
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  appearance none

.widget-select-active select:hover
  background-color #fafafa
  border-style solid
  border-width 1px
  text-align center
  color active-color



.widget-select-active .body
  display block !important
  background-color active-color

.widget-select .icon
  font-size 40px
  text-align center

.widget-select .title
  margin-top 20px
  font-size 20px
  text-align center
  text-transform uppercase

.widget-select select
  margin-left 15px
  margin-right 15px

.widget-select .body
  margin-top 15px
  text-align center
  display none


.widget-select:hover .body
  display block
  background-color transparent



.widget-select:active .body
  display block
