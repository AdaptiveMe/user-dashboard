.codenvy-card-create
  max-width 1024px
  margin auto

.projects-create-project-button
  width 100%

.projects-create-project-panel-toolbar
  font-weight bold

.projects-create-project md-card
  margin-top 20px
  margin-bottom 20px

.projects-create-project-panel-visibility md-icon
  font-size 24px


.create-project-select
    display block
    width 100%
    height 34px
    padding 6px 12px
    font-size 14px
    line-height 1.42857143
    background-color #fafafa
    background-image none
    border 1px solid #e5e5e5
    border-radius 0
    -webkit-box-shadow inset 0 1px 1px rgba(0,0,0,.075)
    -webkit-transition border-color ease-in-out .15s,box-shadow ease-in-out .15s
    transition border-color ease-in-out .15s,box-shadow ease-in-out .15s




.widget-select
  height 180px
  width 180px
  border-color #dddddd
  background-color #ffffff
  border-width 3px
  border-style solid
  -moz-border-radius 10px !important
  border-radius 10px !important
  -webkit-box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  padding-top 20px
  margin-left 15px
  margin-right 17px
  color #8b8b8b

.widget-select select
  display block
  box-shadow: none;
  width 150px
  height 34px
  padding 6px 12px
  font-size 14px

