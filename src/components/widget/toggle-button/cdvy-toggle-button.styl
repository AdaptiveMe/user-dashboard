cdvy-toggle-button .md-button
  height 50px

cdvy-toggle-button .md-button.md-default-theme
  background-color transparent
  color active-color
  min-width 200px
  border-radius 5px
  -moz-border-radius 5px
  -webkit-border-radius 5px
  border 3px solid active-color
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

cdvy-toggle-button .md-button.md-default-theme:not([disabled]):focus
  background-color transparent


cdvy-toggle-button .md-button.md-default-theme.cdvy-toggle-button-disabled
  background-color white
  color #cccccc
  border 3px solid #cccccc

cdvy-toggle-button md-icon
   font-size 2em
   width auto
   height auto
   margin-right 30px
