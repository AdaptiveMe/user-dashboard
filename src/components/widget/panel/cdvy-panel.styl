.cdvy-panel
  margin-left 24px
  margin-top 32px
  margin-bottom 10px
  margin-right 24px
  background-color $background-color
  box-shadow-bigger()
  position: relative

.cdvy-panel .cdvy-panel-title
  color $default-dark-color
  margin-left 24px
  margin-top 20px
  margin-bottom 20px
  font-size 24px


.cdvy-panel .cdvy-panel-title-icon
  margin-right 10px

.cdvy-panel .cdvy-panel-titlebox i
  cursor pointer
  font-size 30px
  margin-top 0px
  margin-right 10px

.cdvy-panel-glass
  background-color: Black
  opacity: 0.5
  top: 0
  bottom :0
  left: 0
  right: 0
  position: absolute


md-card-content.cdvy-panel-content
  padding-top 20px
  padding-left 24px
  padding-bottom 25px
  padding-right 24px
